@model Documento
<h2 class="text-center">Arquivo Word</h2>
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Home" asp-action="EditarDocumento" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Id" type="hidden">

            <div class="form-group mb-3">
                <input asp-for="Titulo" class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <textarea asp-for="Conteudo" style="width:68vw; height: 60vh;"></textarea>
            </div>

            <input type="submit" value="Editar" class="btn btn-primary w-100">
            <a asp-action="RemoverDocumento" asp-route-id="@Model.Id" class="btn btn-danger mt-3 w-100">Remover</a>
            <a asp-action="Index" class="btn btn-info mt-3 w-100">Voltar</a>
        </form>
    </div>
</div>